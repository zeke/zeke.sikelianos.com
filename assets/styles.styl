ul.cards
  @extend .vanilla-list
  display block
  // background yellow
  float none
  clear both
  overflow hidden

.card
  display block
  float left
  width cardWidth
  padding 0
  margin 0
  margin-left: (cardGutterWidth/2)
  margin-right: (cardGutterWidth/2)
  // margin-bottom 20px

.card-thumbnail
  width 100%
  height 240px
  overflow hidden
  background white
  img
    width: 100%

.card-details
  height 100px
  padding-top 10px
  overflow hidden
  text-align center

