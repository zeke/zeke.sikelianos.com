@require 'variables'
@require 'util'

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family base-font-family
  color color-text
  background color-background
  padding 0
  margin 0
  transition all 0.3s
  font-size base-font-size
  text-align center

a
  color color-main
  text-decoration none
  cursor pointer
  outline none
  &:hover
    text-decoration underline

p, ul, ol
  text-align left
  line-height 1.8
  padding 10px 0
  margin 0
  list-style-position inside
  a
    text-decoration underline
    color color-text
    &:hover
      text-decoration underline

blockquote p
  font-style italic
  padding-left 30px
  border-left 3px solid color-quote-border
  color color-quote


h1,h2,h3,h4
  text-align left
  font-weight normal
  color color-heading
  line-height 1.2
  transition all 0.3s
  position relative

h1
  text-align center
  font-size 2.5rem
  margin 0
  padding 30px 0 0 0

h2
  font-size 1.7rem
  margin 0
  padding 40px 0 20px 0
  a
    display block
    color color-heading
    &:hover
      text-decoration none

h3
  font-size 1.4rem
  margin 0
  padding 30px 0 5px 0
  color color-main
  a
    padding 0
    color color-main

figure
  @extend .main-column
  @extend .margin--vertical

  > *
    display inline-block
    clear both
    max-width 100%
  img
    max-width 100%

figcaption
  display block
  font-size 1rem
  font-style italic
  padding 10px
  opacity 0.6
  padding-top 20px
  a
    text-decoration underline
  &.solo
    margin 0 auto 100px auto
    padding 0

iframe
  margin 30px 0

.video-embed
  @extend .main-column
  display block
  width 100%
  margin 30px auto
  border-radius 12px

.video-placeholder
  @extend .main-column
  margin 30px auto

.callout
  border 1px solid #E67E22
  border-radius 8px
  padding 20px
  margin 20px auto
  background linear-gradient(to bottom, #F38020, #E06D1A)
  display block
  max-width text-column-width
  color #FFF
  
  p, a
    color #FFF
  
  a:hover
    opacity 0.8

.callout-help
  font-size 0.9rem
  opacity 0.85
  display block
  color #FFF
    
pre
  font-family 'Droid Sans Mono', Menlo, Monaco, Courier, monospace
  margin 16px 0
  text-align left
  overflow auto
  border-radius 8px
  border 1px solid color-code-border
  line-height 1.6
  position relative

code
  font-family 'Droid Sans Mono', Menlo, Monaco, Courier, monospace
  color color-code-text
  font-size 1rem
  line-height 1.4

  &.shell-single-line::before
    content "$ "
    opacity 0.45
    display inline-block
    margin-right 8px
    user-select none

pre > code
  @extend .text-column
  display block
  color color-code-text
  background transparent
  padding 12px 16px

p > code, li > code
  font-size 1rem
  display inline-block
  background #EEE
  border 1px solid #DDD
  padding 1px 4px
  border-radius 2px

.code-copy-button
  position absolute
  top 10px
  right 10px
  font-size 0.75rem
  padding 6px 10px
  border-radius 6px
  border 1px solid color-code-border
  background #fff
  color #444
  cursor pointer
  opacity 0.7
  transition opacity 0.2s, transform 0.2s
  &:hover
    opacity 1
    transform translateY(-1px)

pre:hover .code-copy-button
  opacity 1

code.shell-single-line
  padding-right 52px

header
 padding 60px 0

@media screen and (max-width mobile-width)

  h1
    font-size 3.2rem

  h2
    font-size 2rem
