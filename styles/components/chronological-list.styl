@require '../variables'
@require '../util'
@require '../base'

.chronological-list
  @extend .vanilla-list
  padding 0

.chronological-item
  display flex
  align-items baseline
  margin 0 0 20px 0
  padding 0
  line-height 1.6

  @media screen and (max-width: mobile-width)
    flex-direction column
    align-items flex-start
    margin 0 0 24px 0

.chronological-date
  font-family monospace
  font-size 0.9rem
  color color-quote
  min-width 120px
  margin-right 10px
  flex-shrink 0

  @media screen and (max-width: mobile-width)
    margin-right 0
    margin-bottom 4px
    min-width auto

.chronological-link
  font-size 1.1rem
  text-decoration none
  color color-text
  line-height 1.4

  &:hover
    color color-main
    text-decoration underline 


.chronological-description
  font-size 0.9rem
  margin-left 20px
  opacity 0.7

.domain-name
  display block
  font-size 0.8rem
  opacity 0.6
  text-decoration none
  color color-text
  margin-top 2px
  
  &:hover
    opacity 0.8

// Project-specific styles
.project-item
  display flex
  align-items flex-start
  gap 20px
  margin 0 0 30px 0

  @media screen and (max-width: mobile-width)
    flex-direction column
    gap 15px
    margin 0 0 35px 0

.project-thumbnail
  flex-shrink 0
  width 200px
  height 150px
  overflow hidden
  border-radius 6px
  background card-background-color
  box-shadow 0px 2px 8px rgba(0,0,0,0.1)

  @media screen and (max-width: mobile-width)
    width 100%
    height 200px
    align-self center

  img
    width 100%
    height 100%
    object-fit cover
    display block

.project-thumbnail-placeholder
  width 100%
  height 100%
  background linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%)
  position relative

  &::after
    content "ðŸ“„"
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-size 24px
    opacity 0.3

.project-content
  flex 1
  min-width 0

.project-item
  .chronological-date
    margin-right 0
    margin-top 8px
    margin-bottom 0
    display block
    font-size 0.8rem

  .chronological-description
    margin-left 0
    margin-top 8px