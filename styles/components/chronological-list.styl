@require '../variables'
@require '../util'
@require '../base'

.chronological-list
  @extend .vanilla-list
  margin 40px 0
  padding 0

.chronological-item
  display flex
  align-items baseline
  margin 0 0 12px 0
  padding 0
  line-height 1.6

  @media screen and (max-width: mobile-width)
    flex-direction column
    align-items flex-start
    margin 0 0 16px 0

.chronological-date
  font-family monospace
  font-size 0.9rem
  color color-quote
  min-width 120px
  margin-right 10px
  flex-shrink 0

  @media screen and (max-width: mobile-width)
    margin-right 0
    margin-bottom 4px
    min-width auto

.chronological-link
  font-size 1.1rem
  text-decoration none
  color color-text
  line-height 1.4

  &:hover
    color color-main
    text-decoration underline 


.chronological-description
  font-size 0.9rem
  margin-left 20px
  opacity 0.7