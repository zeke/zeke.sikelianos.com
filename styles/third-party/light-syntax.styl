lesscss-percentage(n)
  (n * 100)%
syntax-text-color = rgb(34, 40, 55, 1)
syntax-cursor-color = rgb(34, 40, 55, 1)
syntax-selection-color = rgb(200, 217, 236, 1)
syntax-selection-flash-color = rgb(130, 170, 220, 1)
syntax-background-color = rgb(240, 240, 240, 1)
syntax-wrap-guide-color = rgba(85, 85, 85, 0.2)
syntax-indent-guide-color = rgba(85, 85, 85, 0.2)
syntax-invisible-character-color = rgba(85, 85, 85, 0.2)
syntax-result-marker-color = rgb(153, 153, 153, 1)
syntax-result-marker-color-selected = rgb(34, 40, 55, 1)
syntax-gutter-text-color = syntax-text-color
syntax-gutter-text-color-selected = syntax-gutter-text-color
syntax-gutter-background-color = rgb(255, 255, 255, 1)
syntax-gutter-background-color-selected = rgba(255, 255, 134, 0.34)
syntax-color-renamed = rgb(125, 178, 255, 1)
syntax-color-added = rgb(85, 145, 25, 1)
syntax-color-modified = rgb(255, 145, 75, 1)
syntax-color-removed = rgb(220, 60, 75, 1)

.highlight,
pre code.highlight,
pre code.hljs,
pre code[class*="language-"]
  background-color transparent
  color syntax-text-color
  display block
  .invisible-character
    color syntax-invisible-character-color
  .indent-guide
    color syntax-indent-guide-color
  .wrap-guide
    background-color syntax-wrap-guide-color
  .gutter
    color syntax-gutter-text-color
    background syntax-gutter-background-color
  code
    background none
  .gutter .line-number.folded, .gutter .line-number:after, .fold-marker:after
    color #e87b00
  .invisible
    color #555
  .selection .region
    background-color #e1e1e1
  &.is-focused
    .cursor
      border-color syntax-cursor-color
    .selection .region
      background-color syntax-selection-color
    .line-number.cursor-line-no-selection, .line.cursor-line
      background-color syntax-gutter-background-color-selected
  .source.gfm
    color #444
  .gfm
    .markup.heading
      color #111
    & .link
      color #888
    .variable.list
      color #888
  .markdown
    .paragraph
      color #444
    .heading
      color #111
    .link
      color #888
      .string
        color #888
.highlight(.is-focused)
  .cursor
    border-color syntax-cursor-color
  .selection .region
    background-color syntax-selection-color
  .line-number.cursor-line-no-selection, .line.cursor-line
    background-color syntax-gutter-background-color-selected
.comment
  color #7a8594
  font-style italic
.string
  color #c43b58
.string
  .source, .meta.embedded.line
    color #5c6774
  .punctuation.section.embedded
    color #b22344
    .source
      color #b22344
.constant
  &.numeric
    color #d14c4c
  &.language
    color #6f6bb2
  &.character, &.other
    color #6f6bb2
  &.symbol
    color #8a2aa1
  &.numeric.line-number.find-in-files .match
    color rgba(143, 190, 0, 0.63)
.variable
  color #2a8f8f
  &.parameter
    color #6f6bb2
.keyword
  color #2b2f36
  font-weight 600
  &.unit
    color #4b5aa5
  &.special-method
    color #0078a6
.storage
  color #2b2f36
  &.type
    color #2b2f36
.entity
  &.name.class
    text-decoration underline
    color #5f5bb6
  &.other.inherited-class
    text-decoration underline
    color #5f5bb6
  &.name.function
    color #8c2b33
  &.name.tag
    color #0d7d7d
  &.other.attribute-name
    color #3f5b8f
    font-weight 600
  &.name.filename.find-in-files
    color #b08900
.support
  &.constant, &.function, &.type
    color #3f5b8f
  &.class
    color #0d7d7d
.invalid
  color #f6f7f9
  background-color #0e86aa
  &.deprecated
    color #f6f7f9
    background-color #7aa500
.meta
  &.structure.dictionary.json > .string.quoted.double.json, &.structure.dictionary.json > .string.quoted.double.json .punctuation.string
    color #355fb4
  &.structure.dictionary.value.json > .string.quoted.double.json
    color #c43b58
  &.diff, &.diff.header
    color #6a6f79
.css
  &.support.property-name
    font-weight 600
    color #2b2f36
  &.constant
    color #128f88
.bracket-matcher .region
  background-color #c5ccd6
  opacity .7
  border-bottom 0 none
