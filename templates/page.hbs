<div class="color-bar">
  {{#each page.images.thumbnail.colors}}
    <div style="background:{{this}};"></div>
  {{/each}}
</div>

<div class="breadcrumbs muted">
  <a href="/">zeke.sikelianos.com</a>
  {{#if page.section}} ￫ <a href="/{{page.section}}">{{page.section}}</a>{{/if}}
   <!-- ￫ {{page.title}} -->
</div>

<article>
  <div class="page-content">
  <header>
    <h1>{{page.title}}</h1>

    <h2>
      {{#if page.description}}{{page.description}}{{/if}}
      {{#if page.location}}{{page.location}}{{/if}}
    </h2>
  </header>

    {{{page.content.processed}}}
  </div>
</article>
